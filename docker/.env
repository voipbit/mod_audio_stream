# =============================================================================
# mod_audio_stream - Docker Environment Configuration (Testing)
# =============================================================================

# =============================================================================
# Build Configuration
# =============================================================================
BUILD_DATE=
VCS_REF=
VERSION=1.0.0
FREESWITCH_VERSION=1.10.11

# =============================================================================
# FreeSWITCH Network Configuration
# =============================================================================

# SIP signaling ports
SIP_UDP_PORT=5060
SIP_TCP_PORT=5060
SIP_TLS_PORT=5080

# Event Socket Layer (ESL) port
ESL_PORT=8021

# HTTP/WebSocket port (for audio streaming)
HTTP_PORT=8080

# RTP media port range (reduced for testing)
RTP_PORT_START=16384
RTP_PORT_END=16394

# =============================================================================
# FreeSWITCH Configuration
# =============================================================================

# Log level: debug, info, notice, warning, err, crit, alert, emerg
FS_LOG_LEVEL=debug

# Enable colored console output
FS_COLORIZE_CONSOLE=true

# =============================================================================
# mod_audio_stream Configuration
# =============================================================================

# WebSocket port for audio streaming
AUDIO_STREAM_WS_PORT=8080

# Audio sample rate (8000, 16000, 24000, 48000)
AUDIO_STREAM_SAMPLE_RATE=24000

# Number of audio channels (1=mono, 2=stereo)
AUDIO_STREAM_CHANNELS=1

# Audio buffer size in bytes
AUDIO_STREAM_BUFFER_SIZE=320

# =============================================================================
# Database Configuration (PostgreSQL) - Optional for testing
# =============================================================================

# Database connection details
DB_HOST=postgres
DB_PORT=5432
DB_NAME=freeswitch
DB_USER=freeswitch
DB_PASSWORD=testing123

# =============================================================================
# Redis Configuration (Session Storage) - Optional for testing
# =============================================================================

# Redis connection details
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=testing123

# =============================================================================
# OpenAI Configuration
# =============================================================================

# OpenAI API key for Realtime API access
# Replace with your actual API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Default OpenAI voice model
# Options: alloy, echo, fable, onyx, nova, shimmer
OPENAI_DEFAULT_VOICE=alloy

# Default system instructions for OpenAI assistant
OPENAI_DEFAULT_INSTRUCTIONS=You are a helpful voice assistant. Keep responses concise and natural.

# OpenAI API base URL (usually not changed)
OPENAI_API_BASE=https://api.openai.com/v1

# =============================================================================
# Nginx Configuration (Production) - Disabled for testing
# =============================================================================

# Nginx reverse proxy ports
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# Development/Testing Configuration
# =============================================================================

# Set to 'development' or 'production'
ENVIRONMENT=development

# Enable debug mode (for development only)
DEBUG=true

# Enable verbose logging
VERBOSE=true