# =============================================================================
# mod_audio_stream - Docker Environment Configuration
# =============================================================================
#
# Copy this file to `.env` and customize the values for your deployment.
# These environment variables are used by docker-compose.yml
#

# =============================================================================
# Build Configuration
# =============================================================================
BUILD_DATE=
VCS_REF=
VERSION=1.0.0
FREESWITCH_VERSION=1.10.11

# =============================================================================
# FreeSWITCH Network Configuration
# =============================================================================

# SIP signaling ports
SIP_UDP_PORT=5060
SIP_TCP_PORT=5060
SIP_TLS_PORT=5080

# Event Socket Layer (ESL) port
ESL_PORT=8021

# HTTP/WebSocket port (for audio streaming)
HTTP_PORT=8080

# RTP media port range (adjust based on expected concurrent calls)
# Each call typically uses 2 ports (one for each direction)
RTP_PORT_START=16384
RTP_PORT_END=16404

# =============================================================================
# FreeSWITCH Configuration
# =============================================================================

# Log level: debug, info, notice, warning, err, crit, alert, emerg
FS_LOG_LEVEL=info

# Enable colored console output
FS_COLORIZE_CONSOLE=true

# =============================================================================
# mod_audio_stream Configuration
# =============================================================================

# WebSocket port for audio streaming
AUDIO_STREAM_WS_PORT=8080

# Audio sample rate (8000, 16000, 48000)
AUDIO_STREAM_SAMPLE_RATE=8000

# Number of audio channels (1=mono, 2=stereo)
AUDIO_STREAM_CHANNELS=1

# Audio buffer size in bytes
AUDIO_STREAM_BUFFER_SIZE=320

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================

# Database connection details
DB_HOST=postgres
DB_PORT=5432
DB_NAME=freeswitch
DB_USER=freeswitch
DB_PASSWORD=freeswitch_secure_password_here

# =============================================================================
# Redis Configuration (Session Storage)
# =============================================================================

# Redis connection details
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password_here

# =============================================================================
# Nginx Configuration (Production)
# =============================================================================

# Nginx reverse proxy ports
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# Security Configuration
# =============================================================================

# Change these default passwords for production!
# You can generate secure passwords using: openssl rand -base64 32

# Database passwords
POSTGRES_PASSWORD=freeswitch_secure_password_here

# Redis password
REDIS_AUTH_PASSWORD=redis_secure_password_here

# =============================================================================
# Development/Testing Configuration
# =============================================================================

# Set to 'development' or 'production'
ENVIRONMENT=development

# Enable debug mode (for development only)
DEBUG=false

# Enable verbose logging
VERBOSE=false